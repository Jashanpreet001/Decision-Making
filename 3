#include <stdio.h>

int main(){
    int a,b,c;
    
    printf("enter three numbers\n");
    scanf("%d%d%d",&a,&b,&c);
    
    if(a>b)
    { if(a>c)
        {printf("%d is the largest\n",a);}
         else if(c>a)
        {printf("%d is the largest\n",c);}
    }
    if(b>a)
    { if(b>c)
        { printf("%d is the largest\n",b);}
         else if(c>b)
        {printf("%d is the largest\n",c);}
        
        }
    
    
    return 0;
    
}
