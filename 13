#include <stdio.h>
#include <math.h>

int main(){
    
    int a,b,c;
    float r1,r2,d;
    printf("enter the coeffients of the quadratic equation from left to right\n");
    scanf("%d%d%d",&a,&b,&c);
    r1=0;
    r2=0;
    d=b*b-4*a*c;
    
    printf("The Discriminant is %f/n",d);
    
    if(d>=0)
    {r1=(-b+sqrt(d))/2*a;
    r2=(-b-sqrt(d))/2*a;
        printf("%f\t%f\n",r1,r2);}
    
    else
    {printf("The roots are imaginary\n");
    }
    
    
return 0;}
