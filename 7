int main(){
    int num;
   printf("Enter the day's number of the week\n");
    scanf("%d",&num);
    switch(num)
    
    {case 1:
            printf("The day is Monday\n");
            break;
        case 2:
            printf("The day is Tuesday\n");
            break;
        case 3:
            printf("The day is wednesday\n");
            break;
        case 4:
            printf("The day is Thursday\n");
            break;
        case 5:
            printf("The day is friday\n");
            break;
        case 6:
            printf("The day is saturday\n");
            break;
        case 7:
            printf("The day is Sunday\n");
            break;
        default:
            printf("Invalid number: There are only seven days in a week");
            break;
     }
    
    return 0;
}


