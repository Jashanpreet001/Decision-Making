#include <stdio.h>

int main(){
    int num;
    
    printf("enter your number\n");
    scanf("%d", &num);
    
    if(num>0)
        printf("The number is postive\n");
    else if (num<0)
        printf("The number is negative\n");
    else
        printf("The number is zero\n");
    
     return 0;
        }
